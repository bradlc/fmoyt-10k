<main class="js-main">
  <div id="all" role="tabpanel">
    <ul class="grid js-grid">
      {{#each movies}}
      <li class="grid-item">
        <a href="/{{youtube_id}}" class="js-grid-item">
          <div class="grid-item__poster js-grid-poster">
            <img ix-src="https://fmoyt-10k.imgix.net{{poster}}?w=320&amp;h=480&amp;fit=crop&amp;auto=format,compress" alt="" sizes="170px" class="lazyload">
          </div>
          <h3>{{title}}</h3>
          <time datetime="{{year release_date}}" class="mono">{{year release_date}}</time>
        </a>
      </li>
      {{/each}}
    </ul>
    <div class="load-more">
      <a href="/page/2" class="btn btn--primary js-load-more">Load More</a>
    </div>
  </div>
  <div id="saved" class="js-saved" role="tabpanel" aria-hidden="true"></div>
</main>

<div class="movie-container js-movie-container" aria-hidden="true">
  <div class="movie-container__bg js-movie-container-bg"></div>
  <div class="movie js-movie">
    <div class="movie-inner js-movie-inner">
      <div class="movie-front js-movie-front"></div>
      <div class="movie-back js-movie-back">
        <div class="movie-back__poster js-movie-back-poster"></div>
        <h1 class="js-movie-title"></h1>
        <p class="movie__overview js-movie-overview"></p>
        <div class="movie__meta">
          <div>
            <h3 class="mono">Release Date</h3>
            <p class="js-movie-release-date"></p>
          </div>
        </div>
        <div class="movie__btns">
          <button type="button" class="btn btn--secondary btn--icon js-save" data-title="" data-id="">
            <span class="btn__icon"><svg viewBox="0 0 24 24">
              <path d="M17 3H7c-1.1 0-1.99.9-1.99 2L5 21l7-3 7 3V5c0-1.1-.9-2-2-2zm0 15l-5-2.18L7 18V5h10v13z"/>
            </svg></span>
            <span class="btn__text">Save</span>
          </button>
          <a href="#" class="btn btn--primary btn--icon js-movie-link">
            <svg viewBox="0 0 24 24">
              <path d="M8 5v14l11-7z"/>
            </svg>
            Watch Now
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
